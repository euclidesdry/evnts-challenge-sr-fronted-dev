{
	"compilerOptions": {
		"types": ["jest", "node", "cypress", "@testing-library/cypress"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src", "./jest/setup.js", "jest.config.ts", "node_modules/cypress", "./cypress/**/*.{js,ts,}"],
	"exclude": ["node_modules", "build", "dist", "cypress", "cypress.json"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
